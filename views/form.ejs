<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Internship Application Form</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
  
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card shadow-lg">
        <div class="form-header">
          <h1 class="text-center mb-0"><i class="fas fa-handshake me-2"></i>Internship Application</h1>
          <p class="text-center mt-3 mb-0">Join our team and start your career journey</p>
        </div>

        <form id="internship-form" action="/fill_form/submit" method="POST" class="needs-validation p-4" novalidate>

          <!-- Full Name -->
          <div class="mb-4 input-icon">
            <label for="full-name" class="form-label">Full Name <span class="required-asterisk">*</span></label>
            <input type="text" id="full-name" name="name" class="form-control" placeholder="John Doe" required>
            <i class="fas fa-user"></i>
          </div>

          <!-- Email -->
          <div class="mb-4 input-icon">
            <label for="email" class="form-label">Email Address <span class="required-asterisk">*</span></label>
            <input type="email" id="email" name="email" class="form-control" placeholder="john@example.com" required>
            <i class="fas fa-envelope"></i>
          </div>

          <!-- Mobile Number -->
          <div class="mb-4 input-icon">
            <label for="mobile" class="form-label">Mobile Number <span class="required-asterisk">*</span></label>
            <input type="tel" id="mobile" name="mobNum" class="form-control" placeholder="9876543210" pattern="[0-9]{10}" required>
            <i class="fas fa-phone"></i>
            <small class="text-muted d-block mt-1">Enter 10-digit number without spaces</small>
          </div>

          <!-- Date of Birth -->
          <div class="mb-4">
            <label for="dob" class="form-label">Date of Birth <span class="required-asterisk">*</span></label>
            <input type="date" id="dob" name="date" class="form-control" required>
          </div>

          <!-- Education Details -->
          <div class="mb-4">
            <label for="education" class="form-label">Education Details <span class="required-asterisk">*</span></label>
            <textarea id="education" name="education" class="form-control" 
              placeholder="Example: B.Tech in Computer Science - XYZ University (2020-2024)" 
              rows="3" required></textarea>
          </div>

          <!-- Skills -->
          <div class="mb-4">
            <label for="skills" class="form-label">Technical Skills <span class="required-asterisk">*</span></label>
            <textarea id="skills" name="skills" class="form-control" 
              placeholder="Example: Python, JavaScript, React, MySQL, Git"
              rows="3" required></textarea>
          </div>

          <!-- Resume Upload -->
          <div class="mb-4">
            <label class="form-label">Upload Resume <span class="required-asterisk">*</span></label>
            <div class="custom-file-label position-relative">
              <input type="file" id="resume" name="resume" class="custom-file-input" required>
              <div class="d-flex flex-column align-items-center">
                <i class="fas fa-cloud-upload-alt fs-3 mb-2 text-primary"></i>
                <span class="d-block mb-1">Click to upload resume</span>
                <small class="text-muted">(PDF, DOC, DOCX - Max 5MB)</small>
              </div>
            </div>
            <div id="file-name" class="mt-2 text-muted small"></div>
          </div>

          <!-- Cover Letter -->
          <div class="mb-4">
            <label for="message" class="form-label">Cover Letter <span class="required-asterisk">*</span></label>
            <textarea id="message" name="message" class="form-control" 
              placeholder="Explain why you're the perfect candidate for this internship..."
              rows="4" required></textarea>
          </div>

          <!-- Submit Button -->
          <div class="d-grid mt-5">
            <button type="submit" class="btn btn-primary btn-lg">
              <i class="fas fa-paper-plane me-2"></i>Submit Application
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<script>
  // File input handler
  document.getElementById('resume').addEventListener('change', function(e) {
    const fileName = document.getElementById('file-name');
    fileName.textContent = e.target.files[0].name;
  });

  // Form validation
  (function () {
    'use strict';
    const forms = document.querySelectorAll('.needs-validation');
    Array.prototype.slice.call(forms).forEach(function (form) {
      form.addEventListener('submit', function (event) {
        if (!form.checkValidity()) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    });
  })();
</script>

</body>
</html>